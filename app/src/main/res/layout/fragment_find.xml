<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ningjiahao.phhcomic.fragment.FindFragment"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="请输入漫画名称,作者题材查找作品"
        android:textStyle="bold"
        android:background="@drawable/search_field"

        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textColorHint="@color/gray"
        android:cursorVisible="false"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"

        android:src="@drawable/navi_search_gray"
        android:layout_marginRight="10dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="大家都在搜"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
       />

</RelativeLayout>






    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/text"
            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="LOL"
            android:textSize="10sp"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/text"
            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="布里茨安妮"
            android:textSize="10sp"
            android:padding="2dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/text"
            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="魔王! 魔王!"
            android:textSize="10sp"
            android:padding="2dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/text"
            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="帮帮我 慎先生"
            android:textSize="10sp"
            android:padding="2dp"/>
        <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/text"
        android:singleLine="true"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="癌细胞LOL漫画"
            android:textSize="10sp"
            android:padding="2dp"/>
        <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"

        android:singleLine="true"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="潘代蕾"
            android:background="@drawable/text"
            android:textSize="10sp"
            android:padding="2dp"
        />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"

            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="守望先锋十万个冷屁股"
            android:background="@drawable/text"
            android:textSize="10sp"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"

            android:singleLine="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="LOL四格漫画"
            android:background="@drawable/text"
            android:textSize="10sp"
            android:padding="2dp"
            />







    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textview_theme"
                android:layout_weight="1"
                android:text="题材分类"
                android:gravity="center"
                android:textColor="#ff4500"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageview_line_rad_theme"
                android:src="@drawable/line_red"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textview_content"
                android:layout_weight="1"
                android:text="内容分类"
                android:gravity="center"
                
                />
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageview_line_red_content"
                android:src="@drawable/line_red"
                android:visibility="gone"
                />


        </LinearLayout>



    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>









</LinearLayout>
