<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ningjiahao.phhcomic.activity.UserActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imageView_head_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textView_username_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/textView_qianming_user"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_below="@id/textView_username_user"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/imageView_guanzhu_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/other_add_attention"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/textView_zanshu_user"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/orangered"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@mipmap/other_add_zan"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabSelectedTextColor="@color/orangered"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/orangered"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabPadding="10dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
