<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/imageView_head_fans_full"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_username_fans_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="111"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/textView_qianming_fans_full"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/textView_username_fans_full"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@mipmap/attention_button"/>
    </RelativeLayout>
</LinearLayout>