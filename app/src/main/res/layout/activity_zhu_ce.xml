<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zhu_ce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ningjiahao.phhcomic.activity.ZhuCeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="注册"
        app:titleTextColor="@color/black" />

    <ImageView
        android:id="@+id/imageView__logo_zhuce"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitCenter" />
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/editText_zhanghao_zhuce"
            android:layout_width="250dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="请输入账号(4-16个字母,字符+数字)"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/editText_pasword_zhuce"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:hint="请输入密码(6-20个字符)"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/editText_querenpasword_zhuce"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:hint="请再次输入密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/imageView_queren_zhuce"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/determine_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="注册之后你还可以使用关联的微信、微博、和QQ账号登录" />
</LinearLayout>
