<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ningjiahao.phhcomic.fragment.ShouCangFragment">

    <TextView
        android:id="@+id/textView_title_shoucang"
        android:layout_margin="5dp"
        android:text="已收藏的漫画"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textView_count_shoucang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/textView_title_shoucang"
        android:textColor="@color/orangered"/>
    <ImageView
        android:id="@+id/imageView_empty"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shelf_like_record"/>
   <ListView
       android:id="@+id/listView_collect"
       android:layout_width="match_parent"
       android:layout_below="@id/textView_title_shoucang"
       android:layout_height="match_parent"/>


</RelativeLayout>
